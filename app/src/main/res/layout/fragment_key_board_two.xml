<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeyBoardTwoFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3" />

        <Button
            android:id="@+id/clear"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="C" />

        <Button
            android:id="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="=" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6" />

        <Button
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="+" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="-" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9" />

        <Button
            android:id="@+id/divide"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="/" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/zero"
            android:text="0"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/exponent"
            android:text="^"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/decimal"
            android:text="."/>
        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/openbracket"
            android:text="("/>
        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/closedbracket"
            android:text=")"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/first"
            android:text="1st"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </LinearLayout>
    </LinearLayout>
